# .env.example

# -- Database (PostgreSQL) ---------------------------------------------------
# A connection URL in the form:
# postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=

# -- NextAuth.js -------------------------------------------------------------
# Base URL of your frontend (no trailing slash)
NEXTAUTH_URL=http://localhost:3000
# A long, random string (32+ chars)
NEXTAUTH_SECRET=

# -- Spotify API (for Music embeds) ------------------------------------------
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# -- Stripe & Medusa (for Merch) ---------------------------------------------
# Your Stripe secret key (starts with sk_)
STRIPE_API_KEY=
# Your Stripe webhook secret (for verifying events)
STRIPE_WEBHOOK_SECRET=

# (If you run Medusa on a separate port or host, point to it:)
# MEDUSA_BACKEND_URL=http://localhost:9000

# -- Cloudinary (if you use it for media storage) ----------------------------
# cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=
